<h1>Flight Info</h1>

<section id='info'>
  <div id='flight-<%= @flight.id %>'>
    <p>Number: <%= @flight.number %></p>
    <p>Departure Time: <%= @flight.departing_at %>
    <p>Departure City: <%= @flight.departure_city %></p>
    <p>Arrival City: <%= @flight.arrival_city %></p>
  </div>
</section>

<section id='adult-passengers'>
  <h3>Adult Passengers</h3>
  <% @flight.adult_passengers.each do |passenger| %>
    <p><%= passenger.name %></p>
  <% end %>
</section>
